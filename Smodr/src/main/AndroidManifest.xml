<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kevintcoughlin.smodr"
    android:versionCode="7"
    android:versionName="1.3.3">

    <application
        android:name=".SmodrApplication"
        android:label="@string/app_name"
        android:icon="@drawable/icon"
        android:allowBackup="true"
        android:theme="@style/MyCustomTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".views.activities.ChannelsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <service
            android:enabled="true"
            android:label="Playback Service"
            android:name=".services.MediaPlaybackService" />

        <provider
            android:name="com.kevintcoughlin.smodr.data.provider.SmodrProvider"
            android:authorities="com.kevintcoughlin.smodr.data.provider"
            android:exported="false" />
        <meta-data android:name="com.crashlytics.ApiKey" android:value="18b85511073de7110b693fd33f7ef96cb27ae1eb"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
