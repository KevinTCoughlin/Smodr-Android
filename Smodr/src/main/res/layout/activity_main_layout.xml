<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/coordinator_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/seekbar" />

	<RelativeLayout
		android:id="@+id/ad"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<SeekBar
		android:id="@+id/seekbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/times"/>

	<RelativeLayout
		android:id="@+id/times"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/player"
		android:paddingStart="16dp"
		android:paddingEnd="16dp">

		<TextView
			android:id="@+id/current_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"/>

		<TextView
			android:id="@+id/remaining_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/player"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:elevation="8dp"
		android:layout_alignParentBottom="true">

		<ImageView
			android:id="@+id/replay"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:layout_toStartOf="@id/play"
			android:src="@drawable/round_replay_30_black_18dp"
			android:contentDescription="@string/replay_30_seconds" />

		<ImageView
			android:id="@+id/play"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:layout_centerHorizontal="true"
			android:src="@drawable/round_play_arrow_black_18dp"
			android:contentDescription="@string/play_and_pause_toggle_button" />

		<ImageView
			android:id="@+id/forward"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:layout_toEndOf="@+id/play"
			android:src="@drawable/round_forward_30_black_18dp"
			android:contentDescription="@string/forward_30_seconds" />
	</RelativeLayout>
</RelativeLayout>